<div class="wrap">
    <div class="container1">

        <h2>Choose a Burger</h2>

        
            {{#each burgers}}
            {{#unless devoured}}
            <div class="burgercontainer">
            <img class="eatBurger" src="/assets/img/burg.png">
            <button data-id="{{this.id}}" class="delBurger" name="{{this.burger_name}}">{{this.id}}.{{this.burger_name}}</button>
            <form class="custField" >
                <input type="text" class="custName" id="{{this.id}}cust" name="name" placeholder="Enter Name to Devour">
        </form>
            </div>
            {{/unless}}
            {{/each}}
        

    </div>
    

    <div class="container2">

        <h2>Devoured Burgers</h2>

        
            {{#each burgers}}
            {{#if devoured}}
            <div class="burgercontainer">
                <p data-id="{{this.id}}" name="{{this.burger_name}}">{{this.id}}.{{this.burger_name}}</p>
                <img class="usedWrapper" src="/assets/img/wrapper.png">
                <p class="ateBy">Devoured by: {{this.Customer.cust_name}}</p>
            </div>
            {{/if}}
            {{/each}}
        
    </div>


    <div class="container3">
    
        <div id="pic">
            <img src="/assets/img/center.png">
         </div>
        <h2>Make a Burger!</h2>
          
        <form class="create-form">

            <div class="form-group">
                <label for="ba">Burger Name:</label>
                <input type="text" id="burg" name="name">
            </div>
            
            <button type="submit" style="margin-top: 5px">Add Burger</button>
            
        </form>
    </div>
</div>